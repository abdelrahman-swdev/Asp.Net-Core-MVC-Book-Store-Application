@model ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 col">
            <div class="separator">
                <h1 class="display-5">Change Password</h1>
                <hr />
            </div>
            <form method="post">
                <div class="">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" style="color: #dc3545;"></span>
                </div>
                <div style="display:flex;justify-content:space-between;" class="mt-4">
                    <button class="btn btn-success">Send Verification Email</button>
                    <a class="btn btn-outline-dark" asp-controller="Auth" asp-action="Login">Back</a>
                </div>
            </form>
        </div>

    </div>

</div>
